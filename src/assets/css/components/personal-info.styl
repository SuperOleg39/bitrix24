/*
 * personal-info
 */
@import "../variables.styl"
@import "../mixins.styl"

url = embedurl

.svz-personal-info
  margin-top 25px
  border-box()

  &--mobile
    margin-top 0
    padding 15px
  
  .svz-personal-info__side
    width 220px
    padding-right default-padding
    
  .svz-personal-info__avatar
    width 200px
    height 200px
    border-radius 50%
    position relative
    overflow hidden
    margin-bottom default-padding

    &--mobile-personal
      margin: 0 auto 25px
      overflow visible
    
    img
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      max-height 100%
    
  .svz-personal-info__message-btn
    display block
    
  .svz-personal-info__icons-set
    text-align center

  .svz-personal-info__icons-set--mobile
    padding-bottom 25px
    margin-bottom 25px
    border-bottom 1px solid #e9e9e9

  .svz-personal-info__icon
    display inline-block
    width 40px
    height 40px
    background-color main-purple-color
    background-size auto
    background-position center
    background-repeat no-repeat
    border-radius 50%
    margin 0 3px
    cursor pointer
    
    &.icon--camera
      background-image url('../../img/camera-icon.png')
    &.icon--phone
      background-image url('../../img/phone-icon.png')
    &.icon--message
      background-image url('../../img/message-icon.png')
    
  .svz-personal-info__main
    width calc(100% - 220px)
    padding-left default-padding
    color dark-font-color
    
  .svz-personal-info__name
    margin-bottom default-padding

    &--mobile
      text-align center

    .name__sub
      color gray-font-color
      margin: 5px 0;
    
    .name__status
      position relative
      bottom 2px

      &--mobile
        position absolute
        top -5px
        left -70px
      
      > span
        line-height 15px
        vertical-align middle
      
      .status__icon
        display inline-block
        width 11px
        height 11px
        border-radius 50%
        margin-left 15px
        
        &--online
          background-color online-color
        &--offline
          background-color offline-color
          
      .status__text
        color gray-font-color
        margin-left 5px
    
  .svz-personal-info__title
    margin-bottom default-padding

  .svz-personal-info__title--mobile
    font-size 20px
    
  .svz-personal-info__info-group
    margin-bottom default-padding
    
  .svz-personal-info__info-label
    width: 35%
    padding-right default-padding

  .svz-personal-info__info-label--mobile
    padding-right 8px
    
  .svz-personal-info__info-value
    width 65%
    color gray-font-color
    padding-right default-padding
/*
 * end personal-info
 */