/*
 * personal-info
 */
@import "../variables.styl"

url = embedurl

.svz-personal-info
  margin-top 25px
  
  .svz-personal-info__side
    width 220px
    padding-right default-padding
    
  .svz-personal-info__avatar
    width 200px
    height 200px
    border-radius 50%
    overflow hidden
    margin-bottom default-padding
    
  .svz-personal-info__message-btn
    display block
    
  .svz-personal-info__icons-set
    text-align center
      
  .svz-personal-info__icon
    display inline-block
    width 40px
    height 40px
    background-color main-purple-color
    background-size auto
    background-position center
    background-repeat no-repeat
    border-radius 50%
    margin 0 3px
    cursor pointer
    
    &.icon--camera
      background-image url('../../img/camera-icon.png')
    &.icon--phone
      background-image url('../../img/phone-icon.png')
    &.icon--message
      background-image url('../../img/message-icon.png')
    
  .svz-personal-info__main
    width calc(100% - 220px)
    padding-left default-padding
    color dark-font-color
    
  .svz-personal-info__name
    font-family 'StagSans-Light', sans-serif
    font-size 36px
    margin-bottom default-padding

    .name__sub
      font-family 'StagSans-Book', sans-serif
      font-size 15px
      color gray-font-color
      margin: 5px 0;
    
    .name__status
      font-family 'StagSans-Book', sans-serif
      font-size 13px
      position relative
      bottom 2px
      
      > span
        line-height 15px
        vertical-align middle
      
      .status__icon
        display inline-block
        width 11px
        height 11px
        border-radius 50%
        margin-left 15px
        
        &--online
          background-color online-color
        &--offline
          background-color offline-color
          
      .status__text
        color gray-font-color
        margin-left 5px
    
  .svz-personal-info__title
    font-size 17px
    margin-bottom default-padding
    
  .svz-personal-info__info-group
    font-size 15px
    line-height 18px
    margin-bottom default-padding
    
  .svz-personal-info__info-label
    width: 35%
    padding-right default-padding
    
  .svz-personal-info__info-value
    width 65%
    color gray-font-color
    padding-right default-padding
/*
 * end personal-info
 */