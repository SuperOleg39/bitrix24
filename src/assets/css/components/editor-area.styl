/*
 * editor-area
 */
@import "../variables.styl"
@import "../mixins.styl"

.svz-editor-area
  background-color light-gray-color
  border-box()
  
  .svz-editor-area__theme
    padding 20px 30px 0
    position relative
    
    .theme__clear-btn
      position absolute
      right 28px
      top 18px
      width 14px
      height 14px
      cursor pointer
    
    input
      display block 
      border none
      outline none
      background-color light-gray-color
      width 100%
      height 15px 
      line-height 15px
      font-family 'StagSans-Book', sans-serif
      font-size 15px
    
      placeholder-color(light-gray-font-color)

  .svz-editor-area__theme-inner
    display block
    border-bottom 1px solid gray-border-color
    padding-bottom default-padding
    padding-right default-padding
    
  .svz-editor-area__extra
    padding 26px 30px
    border-bottom 1px solid gray-border-color

  .svz-editor-area__footer
    padding 20px 30px 25px

    .svz-btn
      padding-left 35px
      padding-right 35px
      
    .svz-btn--link
      padding-left 15px
      padding-right 15px
/*
 * end editor-area
 */