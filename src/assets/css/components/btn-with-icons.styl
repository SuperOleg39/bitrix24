/*
 * back-btn
 */
@import "../variables.styl"
@import "../mixins.styl"

url = embedurl

.svz-back-btn
  display inline-block
  color gray-font-color
  font-size 13px
  padding 5px 15px
  background-image url('../../img/back-icon.png')
  background-size auto
  background-position left center
  background-repeat no-repeat
  cursor pointer
  transition 0.1s
  
  &:hover
    color static-link-color 
    background-image url('../../img/back-icon--blue.png')

.svz-add-btn
  display inline-block
  color dark-font-color
  font-size 15px
  padding 5px 20px
  background-image url('../../img/icon--plus.png')
  background-size auto
  background-position left 5px center
  background-repeat no-repeat
  cursor pointer
  transition 0.1s
    
.svz-like-btn
  display inline-block
  vertical-align middle
  background-image url('../img/like-icon.png')
  background-size auto
  background-position center
  background-repeat no-repeat
  width 19px
  height 18px
  cursor pointer
  position relative
  top -4px

  &--active,
  &:hover
    background-image url('../img/like-icon--hover.png')

.svz-dislike-btn
  display inline-block
  vertical-align middle
  background-image url('../img/dislike-icon.png')
  background-size auto
  background-position center
  background-repeat no-repeat
  width 19px
  height 18px
  cursor pointer
  position relative
  top 3px

  &--active,
  &:hover
    background-image url('../img/dislike-icon--hover.png')
    
.svz-dropdown-btn
  display inline-block
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  padding 0 15px 0 8px
  background-image url('../../img/sortable-icon.png')
  background-size auto
  background-position right top 10px
  background-repeat no-repeat
  cursor pointer
  
  &--small
    font-size 13px
    line-height 22px
    background-position right top 9px

.svz-clean-btn
  display inline-block
  padding 0 8px
  cursor pointer
/*
 * end back-btn
