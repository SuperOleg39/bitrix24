/*
 * back-btn
 */
@import "../variables.styl"
@import "../mixins.styl"

url = embedurl

.svz-back-btn
  display inline-block
  color gray-font-color
  font-size 13px
  padding 5px 15px
  background-image url('../../img/back-icon.png')
  background-size auto
  background-position left center
  background-repeat no-repeat
  cursor pointer
  transition 0.1s
  
  &:hover
    color static-link-color 
    background-image url('../../img/back-icon--blue.png')
    
.svz-like-btn
  display inline-block
  vertical-align middle
  background-image url('../img/like-icon.png')
  background-size auto
  background-position center
  background-repeat no-repeat
  width 19px
  height 18px
  cursor pointer

  &--already-liked,
  &:hover
    background-image url('../img/like-icon--hover.png')
    
.svz-dropdown-btn
  display inline-block
  padding 0 15px 0 8px
  background-image url('../../img/sortable-icon.png')
  background-size auto
  background-position right top 10px
  background-repeat no-repeat
  cursor pointer

.svz-clean-btn
  display inline-block
  padding 0 8px
  cursor pointer
/*
 * end back-btn
