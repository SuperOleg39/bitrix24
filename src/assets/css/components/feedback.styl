/*
 * feedback
 */
@import "../variables.styl"
@import "../mixins.styl"

url = embedurl

.svz-feedback__list
  margin-top 40px
  border-box()

  .svz-list__header
    margin-bottom default-padding
    
    > div
      padding-right default-padding

    .header__title
      width 42%
      .svz-h2
        display inline-block
        line-height 39px
        vertical-align middle
        padding-right default-padding
      .svz-switch-icon,
      .svz-favorite-icon
        display inline-block
        vertical-align middle
      .svz-switch-icon
        margin-left 6px
    .header__switch
      width 25%
    .header__search
      width 42%
    .header__add-btn
      width 16%
      padding-right 0

      .svz-btn
        display block

  .svz-list__list-head
    border-bottom 1px solid gray-border-color
    margin-bottom 20px

    .list__title
      color dark-font-color
      padding 20px 20px 20px 0

      span
        display inline-block
        cursor pointer

      .title__sortable
        position relative

        &:after
          content ""
          display block
          width 9px
          height 6px
          position absolute
          right -16px
          top 6px
          background-image url('../../img/sortable-icon.png')
          background-size auto
          background-position center
          background-repeat no-repeat
          transition transform 0.1s

        &--active
          &:after
            transform: rotate(180deg);

  .svz-list__list
    border-bottom 1px solid gray-border-color
    padding-top 20px
    padding-bottom  40px
    margin-bottom 20px

  .svz-list__show-more-btn
    padding 0 60px

    
.svz-feedback-type-icon
  width 60px
  height 60px
  background-image url('../../img/thanks-type-icon.png')
  background-size auto
  background-position center
  background-repeat no-repeat
  
.svz-feedback__create
  position relative
  
  .svz-h2
    margin-top 25px
    margin-bottom 35px
    
  .create__error-message
    position absolute 
    top 48px

    .svz-icon
      margin-left 0
    
    .svz-p--small
      color main-orange-color
    
.svz-feedback__create-petition
  .extra-col
    width 38%
    padding-right 15px
  
  .extra-col--title
    width 24%
      
.svz-feedback__create-thank
  .extra-col--icons-set
    width 95px
    
    .svz-feedback-type-icon
      cursor pointer
    
  .extra-col--add-employes
    width calc(100% - 95px) 
    background-color #ededed
    height 60px
    line-height 56px
    padding 0 default-padding
    
    .add-employes-btn
      display inline-block
      cursor pointer

      .svz-icon
        display inline-block
        vertical-align middle
        margin-right 4px

      .svz-p
        display inline-block
        vertical-align middle
        
      &--has-error
        .svz-p
          color main-orange-color
        .svz-icon
            background-image url('../../img/icon--plus--orange.png')
    
  .svz-feedback-type-icon,
  .svz-icon
    display inline-block
    line-height 60px
    vertical-align middle

  .svz-icon
    margin 0 8px
    
@import "feedback__petition-list.styl"
@import "feedback__thanks-list.styl"
@import "feedback__index-page.styl"
/*
 * end feedback
 */