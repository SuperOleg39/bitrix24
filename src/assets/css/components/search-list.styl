/*
 * search-list
 */
@import "../variables.styl"
@import "../mixins.styl"

.svz-search-list
  border-box()
  margin-top: 40px

.svz-search-list__header
  margin-bottom: 25px

.svz-search-list__search
  display block
  border 1px solid #bfbfbf
  border-radius default-border-radius
  height 40px
  width: 100%
  line-height 40px
  padding 2px
  margin 15px 0 0 0
  overflow hidden

.svz-search-list__input-wrap
  width calc(100% - 280px)
  height 100%

  label
    display block
    position relative

.svz-search-list__input
  border 0
  height 100%
  width 100%
  padding 0 15px
  border-radius default-border-radius
  color gray-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px

.svz-search-list__input:active
  outline none

.svz-search-list__input:focus
  outline none

.svz-search-list__submit-wrap
  background next-purple-color
  border-radius default-border-radius
  width 50px
  height 100%
  display block
  position relative
  cursor pointer

.svz-search-list__submit-wrap:hover
  background hover-purple-color

.svz-search-list__submit-wrap:before
  content ''
  background-image url('../../img/svz-search-list__submit-wrap-before.png')
  background-repeat no-repeat
  width 17px
  height 16px
  position absolute
  top 9px
  right 17px

.svz-search-list__submit
  font-size 0
  opacity 0
  width 100%
  height 100%

.svz-search-list__cross
  background-image url('../../img/svz-search-list__cross.png')
  background-repeat no-repeat
  width 9px
  height 9px
  margin 13px 15px 0 0
  display: block

.svz-search-list-results__text
  font-family 'StagSans-Book', sans-serif
  font-size 22px
  line-height 30px
  margin-bottom 10px

.svz-search-list-results__text--none
  color #f87424
  padding-top: 40px

.svz-search-list-results__text--smth
  color #5fbb4e

.svz-search-list__tooltip
  padding 20px 10px

.svz-search-list__tooltip-sort-more a
  cursor pointer
  padding 5px 0
  color dark-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  text-decoration none
  display: block

.svz-search-list__sort-more-wrap
  margin-bottom 15px

.svz-search-list__sort-more
  color dark-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  cursor pointer
  position relative

.svz-search-list__sort-more:after
  content ''
  position absolute
  right -15px
  top 8px
  background-image url('../../img/selectivity-single-select-after.png')
  background-repeat no-repeat
  width 9px
  height 6px
  -webkit-transform rotate(180deg)
  -moz-transform rotate(180deg)
  -ms-transform rotate(180deg)
  -o-transform rotate(180deg)
  transform rotate(180deg)

.svz-search-list__sort-more.svz-switch-icon--active
  border 0
  background inherit

.svz-search-list-results-count
  padding 0
  margin 0
  counter-reset numeric

.svz-search-list-results-count__item
  padding 35px 10px 35px 40px
  border-top 1px solid #e6e6e6
  list-style-type none
  position relative

  &:last-child
    margin-bottom 20px
    border-bottom 1px solid #e6e6e6

  .item-staff-main
    position relative
    padding-right 70px
    font-size 0
    width 30%

  .item-staff-main__pic
    -webkit-border-radius 100%
    -moz-border-radius 100%
    border-radius 100%

  .item-staff-main__pic-wrap
    position relative
    margin-right 10px
    inline-block()

  .item-staff-main__status
    box-sizing()
    width 12px
    height 12px
    position absolute
    right -3px
    bottom -2px
    border 2px solid #ffffff
    -webkit-border-radius 100%
    -moz-border-radius 100%
    border-radius 100%

    &--online
      background #5fbc4e

    &--no-disturb
      background: url(../../img/item-staff-main__status--no-disturb.png) no-repeat
      
    &--away
      background main-yellow-color

  .item-staff-main__name
    color dark-font-color
    font-family 'StagSans-Book', sans-serif
    font-size 15px
    line-height 24px

  .item-staff-main__position
    color gray-font-color
    font-family 'StagSans-Book', sans-serif
    font-size 13px
    line-height 15px

  .item-staff-main__info
    inline-block()
    width calc(100% - 50px)

  .item-staff-contact-info
    //padding-right 90px
    padding-right 15px
    width: 34%

  .item-staff-contact-info__title
    color dark-font-color
    font-family 'StagSans-Book', sans-serif
    font-size 15px
    line-height 24px

  .item-staff-contact-info__current
    color gray-font-color
    font-family 'StagSans-Book', sans-serif
    font-size 15px
    line-height 24px

    a
      color #38a7de
      text-decoration: none

  .item-staff-contact-info__head
    color next-purple-color
    font-family 'StagSans-Book', sans-serif
    font-size 15px
    line-height 24px

  .item-staff-contact-info__head-icon
    background-image url(../../img/item-staff-contact-info__head-icon.png)
    background-repeat no-repeat
    width 9px
    height 9px
    display inline-block
    margin-right 5px

  .item-staff-actions
    text-align right
    width 10%

  .item-staff-actions__icon
    background-image: url(../../img/item-staff-actions__icon.png)
    width 20px
    height 12px
    cursor pointer
    display inline-block
    margin-top 5px

    &.svz-switch-icon--active
      background-color inherit
      border 0

  .item-staff-department
    width 26%

.svz-search-list-results-count__item:before
  counter-increment numeric
  content counter(numeric)'.'
  position absolute
  left 0
  top 35px
  color dark-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 22px
  line-height 30px

.svz-search-list-results-count__item h3
  color dark-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 22px
  line-height 30px
  margin 0
  font-weight normal

.svz-search-list-results-count__item-type
  padding-left 20px
  color gray-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 13px
  line-height 36px

.svz-search-list-results-count__item-type-icon
  margin-left 5px

  &.icon--thanks
    background-image url('../../img/icon-thanks-gray.png')
    background-repeat no-repeat
    display inline-block
    width 19px
    height 24px
    background-position center bottom

  &.icon--message
    background-image url('../../img/icon-message-gray.png')
    background-repeat no-repeat
    display inline-block
    width 19px
    height 24px
    background-position center bottom

  &.icon--comment
    background-image url('../../img/icon-comment-gray.png')
    background-repeat no-repeat
    display inline-block
    width 19px
    height 24px
    background-position center bottom

  &.icon--idea
    background-image url('../../img/icon-idea-gray.png')
    background-repeat no-repeat
    display inline-block
    width 21px
    height 23px
    background-position center bottom


//.svz-search-list-results-count__item-type-icon



.svz-search-list-results-count__item-header
  margin-bottom 15px
  display block
  text-decoration none !important
  width calc(100% - 60px)

.svz-search-list-results-count__item-description
  color dark-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  font-weight normal
  
.svz-search-list-results-count__item-description b
  font-weight normal
  color #5fbb4e

.svz-search-list-results-count__document-name
  color dark-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 40px
  font-weight normal
  padding-left 6px

.svz-search-list-results-count__document-size
  color gray-font-color
  font-family 'StagSans-Book', sans-serif
  font-size 13px
  line-height 40px
  font-weight normal
  padding-left 15px

.svz-search-list-results-count__document-actions
  //inline-block()
  //text-align right
  position absolute
  top 45px
  right 10px

.svz-search-list-results-count__document-action
  box-sizing()
  inline-block()
  width 23px
  height 23px
  border 1px solid gray-font-color
  -webkit-border-radius 100%
  -moz-border-radius 100%
  border-radius 100%
  margin-left 5px
  cursor pointer

  &.action__link-to
    width 23px
    height 23px
    -webkit-background-size 21px
    background-size 21px
    background-repeat no-repeat
    background-image: url(../../img/action__link-to-gray.png)
    inline-block()

  &.action__download
    width 23px
    height 23px
    -webkit-background-size 23px 23px
    background-size 23px 23px
    background-repeat no-repeat
    background-image: url(../../img/action__download-gray.png)
    inline-block()

.svz-search-list__show-more-btn
  padding 0 60px