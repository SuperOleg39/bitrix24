@import "variables.styl"

.svz-h1
  font-family 'StagSans-Light', sans-serif
  font-size 48px
  line-height 54px
  color dark-font-color
  
.svz-h2
  font-family 'StagSans-Light', sans-serif
  font-size 36px
  line-height 44px
  color dark-font-color
  
.svz-h3
  font-family 'StagSans-Book', sans-serif
  font-size 22px
  line-height 30px
  color dark-font-color
  
.svz-p
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  color dark-font-color
  
.svz-p--small
  font-family 'StagSans-Book', sans-serif
  font-size 13px
  line-height 22px
  color dark-font-color

.svz-p--big
  font-family 'StagSans-Book', sans-serif
  font-size 17px
  line-height 26px
  color dark-font-color

.svz-link
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  color: static-link-color
  text-decoration none
  cursor pointer

  &:hover,
  &:active
    color: hover-link-color
