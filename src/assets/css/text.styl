@import "variables.styl"

.svz-h1
  font-family 'StagSans-Light', sans-serif
  font-size 48px
  line-height 54px
  color dark-font-color
  
.svz-h2
  font-family 'StagSans-Light', sans-serif
  font-size 36px
  line-height 44px
  color dark-font-color
  
  &--mobile
    font-size 30px
    line-height 42px
  
.svz-h3
  font-family 'StagSans-Book', sans-serif
  font-size 22px
  line-height 30px
  color dark-font-color

  &--mobile
    font-size 18px
    line-height 30px
  
.svz-p
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  color dark-font-color
  
.svz-p--small
  font-family 'StagSans-Book', sans-serif
  font-size 13px
  line-height 22px
  color dark-font-color

.svz-p--big
  font-family 'StagSans-Book', sans-serif
  font-size 17px
  line-height 26px
  color dark-font-color

.svz-link
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  color: static-link-color
  text-decoration none
  cursor pointer

  &:hover,
  &:active
    color: hover-link-color

.svz-hashtag
  display inline-block
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  color dark-font-color
  text-decoration none
  margin 0 6px
  transition color 0.1s

  &:hover
    color main-blue-color

.svz-tag
  display inline-block
  font-family 'StagSans-Book', sans-serif
  font-size 15px
  line-height 24px
  color dark-font-color
  text-decoration none
  transition color 0.1s
  cursor pointer
  
  &--xs
    font-size 13px
    line-height 22px
  
  &--sm
    font-size 17px
    line-height 26px
  
  &--md
    font-size 22px
    line-height 30px
  
  &--xl
    font-size 32px
    line-height 40px

  &:hover
    color main-blue-color
    
.svz-medium-font
  font-family 'StagSans-Medium', sans-serif

.svz-gray-font
  color gray-font-color

.svz-indent + .svz-indent
  margin-top default-padding
