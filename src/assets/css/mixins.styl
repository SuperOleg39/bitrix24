clearfix()
  &:before,
  &:after
    content ' '
    display table
  
  &:after
    clear both
    
border-box()
  &,
  &:after,
  &:before,
  & *,
  & *:after,
  & *:before
    box-sizing border-box
    
placeholder-color(c)
  &::-webkit-input-placeholder
    color c
  &::-moz-placeholder
    color c
  &:-ms-input-placeholder
    color c
  &:-moz-placeholder
    color c