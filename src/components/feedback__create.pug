// create-thank
.svz-feedback__create.svz-feedback__create-thank
  .svz-h2
    | Добавить благодарность
    
  .create__error-message
    .svz-icon.svz-icon--warning
    span.svz-p--small Ошибка! Для отправки заполните все необходимые поля

  .svz-feedback__editor-area.svz-editor-area
    .svz-editor-area__theme
      .svz-icon.svz-icon--cross.theme__clear-btn
      label.svz-editor-area__theme-inner
        input(type='text', placeholder='Тема')

    // REMOVE #editor block!
    #editor
      img(src='assets/img/EDITOR.jpg')

    .svz-editor-area__extra
      .svz-row
        .extra-col.extra-col--icons-set.svz-col
          .svz-feedback-type-icon
          .svz-icon.svz-icon--arrow-right
        .extra-col.extra-col--add-employes.svz-col
          .add-employes-btn.add-employes-btn--has-error
            .svz-icon.svz-icon--plus
            .svz-p Добавить сотрудников
    .svz-editor-area__footer
      .svz-btn Отправить
      .svz-btn.svz-btn--link Отменить
  
